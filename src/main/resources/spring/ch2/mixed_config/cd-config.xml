<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="abbeyRoad" class="ch2.xml_config.soundsystem.BlankDisc">
        <property name="title" value="Abbey Road"/>
        <property name="artist" value="The Beatles"/>
        <property name="tracks">
            <list>
                <value>Come Together</value>
                <value>Something</value>
                <value>Maxwell's Silver Hammer</value>
            </list>
        </property>
    </bean>

    <bean class="ch2.mixed_config.config.YellowSubmarineConfig"/>

    <bean id="cdPlayer" class="ch2.mixed_config.soundsystem.CDPlayer">
        <constructor-arg ref="yellowSubmarine"/>
    </bean>

</beans>